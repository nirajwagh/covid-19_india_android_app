<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/h"
        android:gravity="center|top"
        android:padding="5dp"
        android:text="Covid-19 India app provides the current number of Covid-19 cases in India along with some other details.
       \n\nThe data is gathered from covid19india.org, a website developed by a group of volunteers who are constantly updating the data using news from state press releases.
        \n\nA big thanks to them. \n\nVisit their website at: \nhttps://www.covid19india.org
        \n\nLicenses
        \n\nCorona Animation : @Itay Alon / LottieFiles
        \n\nInfo Animation : @Bamdad / LottieFiles
\n\nThis app is completely ad-free and we do not collect any data of users, not even their first name."
        android:textColor="#000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lottieAnimationView"
        app:layout_constraintVertical_bias="0.035" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="194dp"
        android:layout_height="76dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="info.json"
        app:lottie_loop="true" />

</androidx.constraintlayout.widget.ConstraintLayout>